@page "/"
@using Grpc.Net.Client;

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<h1>Hello, gRPC!</h1>

<button class="btn btn-primary" onclick="@SayHello">Say Hello</button>

<hr />

<p>@Greeting</p>

@functions {

    private string Greeting;

    async Task SayHello()
    {
        //var channel = new Channel("localhost:61806", ChannelCredentials.Insecure);
        var grpcChannel = GrpcChannel.ForAddress("http://localhost:5121");
        var client = new Greeter.GreeterClient(grpcChannel);
        try
        {
            var reply = await client.SayHelloAsync(new HelloRequest { Name = "Blazor gRPC Client" });
            Greeting = reply.Message;
        }
        catch (Exception ex)
        {
        }


        await grpcChannel.ShutdownAsync();
    }

}